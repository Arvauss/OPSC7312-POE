<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e6e4"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <!--android:background=...-->


    <!--TODO: make button change when clicked/mouse hover-->



    <ImageView
        android:id="@+id/regLogo"
        android:layout_width="217dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usernameEditTxt"
        android:inputType="textEmailAddress"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/passwordEditTxt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:hint="Password"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/passwordEditTxt2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:layout_marginBottom="50dp"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/regBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/black"
        android:text="REGISTER"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/loginOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:minHeight="48dp"
        android:text="Login"
        android:textColor="@color/pc"
        android:textSize="15dp" />




</LinearLayout>